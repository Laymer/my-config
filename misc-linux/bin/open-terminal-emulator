#!/bin/bash

# depend on the util ``xdotool''

sessionname=$1
[ -z "$sessionname" ] && sessionname="Local-`xdotool get_desktop`"

classname=LocalTE
termtitle="Terminal-$sessionname"

unset TMUX

xdotool search --name "$termtitle" windowraise windowfocus || \
    exec urxvt -title "$termtitle" -name "$classname" -e dvtm-status
# xdotool search --name "$termtitle" windowraise windowfocus || \
#     exec gnome-terminal --title "$termtitle" --name "$classname" -e \
#     "tmux attach-session -d -t \"$sessionname\""
